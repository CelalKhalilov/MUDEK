@{
    var KullaniciTeacher = ViewBag.teachers as List<Teacher>;
}

<div class="container-xl" style="max-width: 800px; margin-bottom: 100px; margin-top: 40px;">
    <h3>Öğretmen</h3>
    <table style="text-align: center; margin-top: 30px;" class="table table-striped">
        <tr>
            <th>ID</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>E-mail</th>
            <th>Profil Resmi</th>
        </tr>
        @{
                var teachers = ViewBag.teach as List<Teacher>;
        }
        @foreach (var item in KullaniciTeacher)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Gmail</td>
                <th>
                    @if (teachers != null && teachers.Any())
                    {
                        @foreach (var itemm in teachers)
                        {
                            if (itemm.Id == ViewBag.UserId)
                            {
                                if (string.IsNullOrEmpty(itemm.ProfileImageBase64))
                                {
                                    <img style="width: 30px; height: 35px; object-fit: cover; border-radius: 50%;" src="https://t4.ftcdn.net/jpg/00/64/67/63/360_F_64676383_LdbmhiNM6Ypzb3FM4PPuFP9rHe7ri8Ju.jpg"
                                        alt="Varsayılan Profil Resmi">
                                }
                                else
                                {
                                    <img style="width: 30px; height: 35px; object-fit: cover; border-radius: 50%;" src="data:image/jpeg;base64,@itemm.ProfileImageBase64" 
                                        alt="Profil Resmi" >
                                }
                            }
                        }
                    }
                </th>
            </tr>
        }
    </table>
    <h3 class="baslik">Bölüm Başkanı</h3>
