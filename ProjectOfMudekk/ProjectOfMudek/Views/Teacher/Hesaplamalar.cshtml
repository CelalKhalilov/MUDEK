                    {
                        // Ağırlıklandırma ve toplam not değişkenleri
                        var weightedTotal = 0.0;
                        var weightSum = 0.0;

                        <tr class="tab-satir-2">
                            <td style="background-color: yellowgreen;">@item4.FullName</td>
                            <td style="background-color: rgb(60, 125, 200);">@item4.StudentNumber</td>
                            @foreach (var item in List)
                            {
                                @foreach (var item2 in List2)
                                {
                                    if (item.Title == item2.Title)
                                    {
                                        var noteFound = false;
                                        foreach (var item5 in List5)
                                        {
                                            if (item4.Id == item5.StudentId)
                                            {
                                                if (item5.LowerRating == item2.LowerRating)
                                                {
                                                    <td>@item5.Note</td>

                                                    // Not türüne göre ağırlıklandırma
                                                    double weight = 0.0;
                                                    @foreach (var itemm in List)
                                                    {
                                                        if (item2.Title.ToLower().Contains(@itemm.Title.ToLower()))
                                                        {
                                                            weight = itemm.Percentage / 100.0;
                                                            break;
                                                        }
                                                    }

                                                    weightedTotal += item5.Note.HasValue ? item5.Note.Value * weight : 0;
                                                    weightSum += weight;

                                                    noteFound = true;
                                                    break;
                                                }
                                            }
                                        }
                                        if (!noteFound)
                                        {
                                            <td></td>
                                        }
                                    }
                                }
                            }

                            @{ // Toplam notu hesaplama "@totalScore.ToString("0.00")"
                                var totalScore = weightSum > 0 ? weightedTotal : 0;
                            }
                            

                            @if (totalScore >= 90)
                            {
                                <td style="background-color: green; color: white;">AA</td>
                            }
                            else if (totalScore >= 85)
                            {
