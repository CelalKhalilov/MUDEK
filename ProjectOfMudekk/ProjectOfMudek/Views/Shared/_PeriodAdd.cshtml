                        <input type="text" asp-for="DepartmentId" class="form-control" id="DepartmentId" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="PeriodName" class="form-label">Dönem</label>
                        <input type="text" asp-for="PeriodName" class="form-control" id="PeriodName" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Geri</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


