@model Period

<script>
    // Güncelle butonuna tıklandığında çalışacak fonksiyon
    function fillFormFields_2(id) {
        // Modal içindeki form alanlarını bul
        var IdInput = document.getElementById('DepartmentId');
        
        // Form alanlarına ilgili değerleri yerleştir
        IdInput.value = id;
       
    }
</script>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop_2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
